#ifndef MODULEWINDOWS_H_
#define MODULEWINDOWS_H_

#include <windows.h>
#include "IModule.h"

namespace dbgl
{
    class ModuleWindows : public IModule
    {
	public:
	    ModuleWindows(std::string path);
	    virtual ~ModuleWindows();
	    virtual bool load();
	    virtual void* getFunction(std::string name);
	private:
	    // Prevent copies
	    ModuleWindows(ModuleWindows& other);
	    ModuleWindows& operator=(ModuleWindows& other);

	    std::string m_path;
            HINSTANCE m_handle;
    };
}

#include "ModuleWindows.imp"

#endif /* MODULEWINDOWS_H_ */
