#ifndef IMODULE_H_
#define IMODULE_H_

#include <string>
#include <cstring>

namespace dbgl
{
    class IModule
    {
	public:
	    virtual ~IModule() = 0;
	    virtual bool load() = 0;
	    virtual void* getFunction(std::string name) = 0;
    };
}

#endif /* IMODULE_H_ */
