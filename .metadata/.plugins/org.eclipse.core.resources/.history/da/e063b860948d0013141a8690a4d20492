#ifndef MATRIX2_H_
#define MATRIX2_H_

#include <cstring>
#include "Vector2.h"

namespace dbgl
{
	/// <summary>
	/// Matrix of size 2 by 2
	/// </summary>
	template<typename T> class Matrix2
	{
	public:
		Matrix2();
		Matrix2(Matrix2<T> &other);
		~Matrix2();
		Vector2<T>& operator[](int const& index);
		Matrix2<T>& operator*=(T const &scalar);
		Matrix2<T>& operator*=(Matrix2<T> const &other);

	private:
		Vector2<T> _columns[2];
	};
}

#include "Matrix2.imp"

#endif /* MATRIX2_H_ */
