namespace dbgl
{
	template<typename T> Vector3<T>::Vector3() : _x(0), _y(0), _z(0)
	{
	}
	
	template<typename T> Vector3<T>::Vector3(T x, T y, T z) : _x(x), _y(y), _z(z)
	{
	}
	
	template<typename T> Vector3<T>::Vector3(const Vector3<T> &other) :_x(other[0]), _y(other[1]), _z(other[2])
	{
	}

	template<typename T> Vector3<T>::~Vector3()
	{
	}
	
	template<typename T> std::size_t Vector3<T>::getDimension() const
	{
		return 3;
	}
	
	template<typename T> T Vector3<T>::getX() const
	{
		return _x;
	}
	
	template<typename T> T Vector3<T>::getY() const
	{
		return _y;
	}
	
	template<typename T> T Vector3<T>::getZ() const
	{
		return _z;
	}
	
	template<typename T> T Vector3<T>::getSquaredLength() const
	{
		T sqlen = 0;
		for(int i = 0; i < getDimension(); i++)
			sqlen += (*this)[i] * (*this)[i];
		return sqlen;
	}
	
	template<typename T> T Vector3<T>::getLength() const
	{
		return static_cast<T>(std::sqrt(static_cast<double>(getSquaredLength())));
	}
	
	template<typename T> Vector3<T>& Vector3<T>::normalize()
	{
		T length = getLength();
		for(int i = 0; i < getDimension(); i++)
			(*this)[i] /= length;
		return *this;
	}
	
	template<typename T> Vector3<T> Vector3<T>::getNormalized() const
	{
		Vector3<T> copy(*this);
		copy.normalize();
		return copy;
	}
	
	template<typename T> Vector3<T> Vector3<T>::getCrossProduct(Vector3<T> rhs)
	{
		Vector3<T> copy(*this);
		copy *= rhs;
		return copy;
	}
	
	template<typename T> bool Vector3<T>::isZero()
	{
		for(int i = 0; i < getDimension(); i++)
			if((*this)[i] != 0)
				return false;
		return true;
	}
	
	template<typename T> Vector3<T>& Vector3<T>::translate(T x, T y, T z)
	{
		_x += x;
		_y += y;
		_z += z;
		return *this;
	}
	
	template<typename T> Vector3<T>& Vector3<T>::operator=(Vector3<T> const& rhs) 
	{ 
		if (*this != rhs)
		{ 
			for(int i = 0; i < getDimension(); i++)
				(*this)[i] = rhs[i];
		} 
		return *this;
	}
	
	template<typename T> const Vector3<T> Vector3<T>::operator+(Vector3<T> const& rhs) 
	{ 
		Vector3<T> tmp(*this);
		tmp += rhs;
		return tmp;
	}
	
	template<typename T> Vector3<T>& Vector3<T>::operator+=(Vector3<T> const& rhs)
	{
		for(int i = 0; i < getDimension(); i++)
			(*this)[i] += rhs[i];
		return *this;
	}
	
	template<typename T> const Vector3<T> Vector3<T>::operator-(Vector3<T> const& rhs) 
	{ 
		Vector3<T> tmp(*this);
		tmp -= rhs;
		return tmp;
	}
		
	template<typename T> Vector3<T>& Vector3<T>::operator-=(Vector3<T> const& rhs)
	{
		for(int i = 0; i < getDimension(); i++)
			(*this)[i] -= rhs[i];
		return *this;
	}
	
	template<typename T> const T Vector3<T>::operator*(Vector3<T> const& rhs) 
	{
		T dotProd = 0;
		for(int i = 0; i < getDimension(); i++)
			dotProd += (*this)[i] * rhs[i];
		return dotProd;
	}
	
	template<typename T> const Vector3<T> Vector3<T>::operator*(T const& rhs) 
	{ 
		Vector3<T> tmp(*this);
		tmp *= rhs;
		return tmp;
	}
		
	template<typename T> Vector3<T>& Vector3<T>::operator*=(T const& rhs)
	{
		for(int i = 0; i < getDimension(); i++)
			(*this)[i] *= rhs;
		return *this;
	}
	
	template<typename T> Vector3<T>& Vector3<T>::operator*=(Vector3<T> const& rhs)
	{
		auto temp(*this); // Need copy of unmodified data
		for(int i = 0; i < getDimension(); i++)
		{
			int i1 = (i+1) % getDimension();
			int i2 = (i+2) % getDimension();
			(*this)[i] = temp[i1]*rhs[i2] - temp[i2]*rhs[i1];
		}
		return *this;
	}
	
	template<typename T> const Vector3<T> Vector3<T>::operator/(T const& rhs) 
	{ 
		Vector3<T> tmp(*this);
		tmp /= rhs;
		return tmp;
	}
		
	template<typename T> Vector3<T>& Vector3<T>::operator/=(T const& rhs)
	{
		for(int i = 0; i < getDimension(); i++)
			(*this)[i] /= rhs;
		return *this;
	}
	
	template<typename T> Vector3<T> Vector3<T>::operator-() const
	{
		Vector3<T> tmp(*this);
		for(int i = 0; i < getDimension(); i++)
			tmp[i] = -(*this)[i];
		return tmp;
	}
	
	template<typename T> bool Vector3<T>::operator==(Vector3<T> const& rhs)
	{
		for(int i = 0; i < getDimension(); i++)
			if((*this)[i] != rhs[i])
				return false;
		return true;
	}
	
	template<typename T> bool Vector3<T>::operator!=(Vector3<T> const& rhs)
	{
		return !(*this == rhs);
	}
	
	template<typename T> bool Vector3<T>::operator<(Vector3<T> const& rhs)
	{
		return this->getLength() < rhs.getLength();
	}
	
	template<typename T> bool Vector3<T>::operator>(Vector3<T> const& rhs)
	{
		return this->getLength() > rhs.getLength();
	}
	
	template<typename T> bool Vector3<T>::operator<=(Vector3<T> const& rhs)
	{
		return this->getLength() <= rhs.getLength();
	}
	
	template<typename T> bool Vector3<T>::operator>=(Vector3<T> const& rhs)
	{
		return this->getLength() >= rhs.getLength();
	}

	template<typename T> T& Vector3<T>::operator[](std::size_t const& index)
	{
		if(index < getDimension())
			return (&_x)[index];
		else
		{
			LOG->error("Tried to access element %d of %d-length vector!", index, getDimension());
			exit(EXIT_FAILURE);
		}
	}
	
	template<typename T> const T& Vector3<T>::operator[](std::size_t const& index) const
	{
		if(index < getDimension())
		    return (&_x)[index];
		else
		{
			LOG->error("Tried to access element %d of %d-length vector!", index, getDimension());
			exit(EXIT_FAILURE);
		}
	}
}
